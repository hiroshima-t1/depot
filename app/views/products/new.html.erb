<h1>新しい商品</h1>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  <!-- START_HIGHLIGHT -->
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <!-- END_HIGHLIGHT -->

  <p>
    <%= f.submit "作成" %>
  </p>
<% end %>

<%= link_to '戻る', products_path %>
